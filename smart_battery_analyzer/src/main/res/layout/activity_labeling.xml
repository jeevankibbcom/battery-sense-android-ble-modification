<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
              android:orientation="vertical">

    <include layout="@layout/action_bar_settings"/>

    <RelativeLayout
        android:id="@+id/labeling_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:background="@color/background" >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/list_divider"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_narrow_h"
            android:paddingTop="@dimen/padding_v"
            android:paddingEnd="@dimen/padding_narrow_h"
            android:paddingBottom="@dimen/padding_v"
            android:showDividers="middle|end">

            <com.ctek.sba.widget.font.CtekTextView
                android:id="@+id/fcc_statement_header"
                style="@style/Ctek.TextView.ForzaBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_v"
                android:layout_marginBottom="@dimen/padding_v"
                android:textColor="@color/white"
                android:textSize="@dimen/body_font_size_small" />

            <com.ctek.sba.widget.font.CtekTextView
                android:id="@+id/fcc_part15_warning"
                style="@style/Ctek.TextView.ForzaBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_v"
                android:layout_marginBottom="@dimen/padding_v"
                android:textColor="@color/white"
                android:textSize="@dimen/body_font_size_small" />

            <com.ctek.sba.widget.font.CtekTextView
                android:id="@+id/fcc_part15_Note"
                style="@style/Ctek.TextView.ForzaBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_v"
                android:layout_marginBottom="@dimen/padding_v"
                android:textColor="@color/white"
                android:textSize="@dimen/body_font_size_small" />

            <com.ctek.sba.widget.font.CtekTextView
                android:id="@+id/rss210_notice"
                style="@style/Ctek.TextView.ForzaBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_v"
                android:layout_marginBottom="@dimen/padding_v"
                android:textColor="@color/white"
                android:textSize="@dimen/body_font_size_small" />

        </LinearLayout>
    </ScrollView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.ctek.sba.widget.font.CtekTextView
            android:id="@+id/fcc_continue"
            style="@style/big_bottom_button"
            android:onClick="back"
            android:text="@string/fcc_continue"
            android:visibility="visible"/>
        <!--        Need to add translation -->
    </LinearLayout>
</LinearLayout>
