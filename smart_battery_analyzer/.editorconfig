# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
indent_style = space
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 2
continuation_indent_size = 4
max_line_length = 120

[*.xml]
indent_size = 4

[*.groovy]
indent_size = 2
continuation_indent_size = 4
max_line_length = 120
